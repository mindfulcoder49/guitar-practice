// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(cuid())
  email         String           @unique
  name          String?
  passwordHash  String
  createdAt     DateTime         @default(now())
  learnedChords LearnedChord[]
  sessions      PracticeSession[]
  learnedSongs  LearnedSong[]
  songSessions  SongSession[]
  catalogItems  CatalogItem[]
}

model LearnedChord {
  id        String   @id @default(cuid())
  userId    String
  chordName String
  learnedAt DateTime @default(now())
  accuracy  Float    @default(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, chordName])
}

model PracticeSession {
  id           String   @id @default(cuid())
  userId       String
  mode         String   // "flashcard" | "guitar-hero"
  chordsPlayed String   // JSON array of chord names
  score        Int      @default(0)
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LearnedSong {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  accuracy  Float    @default(0)
  learnedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, songId])
}

model SongSession {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  score     Int      @default(0)
  hits      Int      @default(0)
  misses    Int      @default(0)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CatalogItem {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String   // 'chord-progression' | 'melody' | 'fingerpick'
  data      String   // JSON-stringified
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
